<?xml version="1.0" ?>

<launch>
  <!-- Arguments -->
 
  <arg name="map_file" default="$(find rvbot_navigation)/maps/map.yaml"/>  
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find rvbot_navigation)/launch/rvbot_amcl.launch"/>

  <!-- move_base -->
  <include file="$(find rvbot_navigation)/launch/rvbot_move_base.launch">    
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <node 
    pkg="rviz" 
    type="rviz" 
    name="rviz" 
    args="-d $(find rvbot_navigation)/rviz/navigation.rviz"
    required="true"    
    
    />  
</launch>
